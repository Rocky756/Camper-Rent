<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">{{add.title}}</h1>
        <p class="lead text-muted">Цена: {{add.price}} руб/сутки</p>
        <p>
          <a href="/seller/active" class="btn btn-primary my-2">Назад</a>
          <a href="/seller/edit/{{add._id}}" class="btn btn-secondary my-2">Изменить</a>
          {{#if add.statusActive}}
          <a href="/seller/delete/{{add._id}}" class="btn btn-secondary my-2">В архив</a>
          {{else}}
          <a href="/seller/recovery/{{add._id}}" class="btn btn-secondary my-2">Восстановить</a>
          {{/if}}
        </p>
        <p>
          <table class="addTable">
          <tbody>
            <tr>
              <td class='addTD'>Фирма:</td>
              <td class='addTD'>{{add.specification.brand}}</td>
            </tr>
            <tr>
              <td class='addTD'>Модель:</td>
              <td class='addTD'>{{add.specification.model}}</td>
            </tr>
            <tr>
              <td class='addTD'>Цвет:</td>
              <td class='addTD'>{{add.specification.color}}</td>
            </tr>
            <tr>
              <td class='addTD'>Год выпуска:</td>
              <td class='addTD'>{{add.specification.year}}</td>
            </tr>
            <tr>
              <td class='addTD'>Кол-во спальных мест:</td>
              <td class='addTD'>{{add.specification.sleepingPlace}}</td>
            </tr>
            <tr>
              <td class='addTD'>Страна изготовитель:</td>
              <td class='addTD'>{{add.specification.country}}</td>
            </tr>
            <tr>
              <td class='addTD'>Состояние:</td>
              <td class='addTD'>{{add.specification.condition}}</td>
            </tr>
            <tr>
              <td class='addTD'>Права категории:</td>
              <td class='addTD'>{{add.specification.driverLicense}}</td>
            </tr>
            <tr>
              <td class='addTD'>Место нахождения:</td>
              <td class='addTD'd>{{add.region}}</td>
            </tr>
            <tr>
              <td class='addTD'>Категория:</td>
              <td class='addTD'>{{add.category}}</td>
            </tr>
            <tr>
              <td class='addTD'>Объявление разместил:</td>
              <td class='addTD'>{{add.author}}</td>
            </tr>
            <tr>
              <td class='addTD'>Контакты:</td>
              <td class='addTD'>{{add.contacts}}</td>
            </tr>
          </tbody>
          </table>
        </p>
      </div>
    </div>
  </section>
  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
